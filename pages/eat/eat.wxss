/* pages/eat/eat.wxss */
.box {
  background-color: #fff;
  width: 70%;
  height: 480rpx;
  box-shadow: 1rpx 3rpx 8rpx -5rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* box标题栏 */
.box #box_title {
  font-size: 32rpx;
  font-weight: 500;
  margin-top: 20rpx;
}

/* box支付栏 */
.box #box_payment {
  font-size: 32rpx;
  font-weight: 400;
  margin-top: 20rpx;
}

/* box下单时间 */
.box #box_paytime {
  width: 90%;
  margin-top: 20rpx;
  font-size: 24rpx;
}

/* box订单详情 */
.box #order {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 6rpx;
  width: 95%;
  height: 120rpx;
  border-top: 2rpx dashed #CCCCCC;
  border-bottom: 2rpx dashed #CCCCCC;
}

/* 订单详细——菜品 */
.box #order #food {
  font-weight: 700;
  font-size: 40rpx;
}

/* 订单详细——数目 */
.box #order #food_num {
  font-size: 28rpx;
}

/* box订单结尾标题 */
.box #end_title {
  font-size: 32rpx;
  font-weight: 500;
  margin-top: 38rpx;
}