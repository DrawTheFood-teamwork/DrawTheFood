/* pages/address/index.wxss */
.card_wrap {
  position: relative;
  margin-top: 80rpx;
  margin-bottom: 80rpx;
  width: 270rpx;
  height: 360rpx;
}

.card {
  position: absolute;
  margin-top: 80rpx;
  margin-bottom: 80rpx;
  width: 270rpx;
  height: 360rpx;
  border-radius: 24rpx;
}

.cardup{
  background: -webkit-linear-gradient(90deg, rgba(255, 195, 0, 1) 0%, rgba(255, 222, 0, 1) 48.38%, rgba(255, 238, 0, 1) 100%);
}

.card .card_border {
  margin: 20rpx auto;
  width: 230rpx;
  height: 320rpx;
  border: 2rpx solid rgba(255, 141, 26, 1);
}
.card .card_border .box_center {
  position: relative;
  display: flex;
  justify-content: center;
  margin: 50% auto;
  width: 170rpx;
  height: 80rpx;
  background: radial-gradient(50% 50%, rgba(255, 244, 209, 1) 0%, rgba(255, 141, 26, 0.21) 80.29%, rgba(255, 141, 26, 0) 100%);
}

.card .card_border .box_center #card{
  position: absolute;
  left: 50%;
  bottom: 20rpx;
  transform: translateX(-50%);
  width: 96rpx;
  height: 36rpx;
}

.cardface {
  position: absolute;
  background: rgba(255, 231, 150, 1);
  transform: rotateY(-90deg);
}

.cardface .result {
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 50% auto;
  width: 170rpx;
  height: 80rpx;
  background: radial-gradient(50% 50%, rgba(255, 244, 209, 1) 0%, rgba(255, 141, 26, 0.21) 80.29%, rgba(255, 141, 26, 0) 100%);
 color: rgba(245, 122, 0, 1);
}

.card  .box_bottom #cardtag{
  position: absolute;
  left: 50%;
  bottom: 20rpx;
  transform: translateX(-50%);
  width: 96rpx;
  height: 36rpx;
}